BoxLayout:
    orientation: 'vertical'
    BoxLayout
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(int(input_number), 1)
            Button:
                text: 'Down'
                on_press: handle_increment(-1)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        text: 'Enter a number and press "Square"'