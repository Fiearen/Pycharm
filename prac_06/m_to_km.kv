BoxLayout:
    orientation: 'vertical'
    BoxLayout
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            on_text: app.m_to_km(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    Label:
        id: converted_value
        text: ''